@using AppointmentScheduling.Utilities
<div class="container pt-4">
    <div class="row">
        <div class="col-auto">
            @if (User.IsInRole(Roles.Admin))
            {
                <label class="form-label" for="doctor-select">Select Doctor</label>
                <select class="form-select mb-5" id="doctor-select">
                    @foreach (SelectListItem item in ViewBag.DoctorsSelectList)
                    {
                        <option>@item.Text</option>
                    }
                </select>
            }

        </div>
    </div>
    <div class="row">
        <div class="col">
            <div id="calendar"></div>
        </div>
    </div>
</div>