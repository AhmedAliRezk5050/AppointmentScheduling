@if (User.Identity is {IsAuthenticated: true })
{
    <ul class="nav navbar-nav">
        <li class="nav-link text-white d-flex align-items-center">Hello, @User.Identity.Name?.Split("@")[0]</li>
        <li class="nav-link">
            <form asp-action="Logout" asp-controller="Account">
                <input type="submit" value="Logout" class="btn text-white">
            </form>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav">
        <li>
            <a class="nav-link text-white"  asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li>
             <a class="nav-link text-white" asp-controller="Account" asp-action="Login" >Login</a>
        </li>
    </ul>
}